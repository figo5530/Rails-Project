<section>
    <div class="hotel_booking_area position">
        <div class="container">
            <div class="hotel_booking_table">
                <div class="col-md-3">
                    <h2>Traveler<br>Info</h2>
                </div>
                <div class="col-md-9">
                    <div class="boking_table">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="form-group">
                                        <div class='input-group'>
                                            <h6>First Name<br>
                                            <p></p> 
                                            <%= t.traveler_first_name %></h6>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class='input-group'>
                                            <h6>Contact Info<br>
                                            <p></p> 
                                            <%= t.traveler_contact_info %></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="input-group">
                                        <h6>Last Name<br>
                                            <p></p>
                                            <%= t.traveler_last_name %></h6>
                                    </div>
                                    <div class="input-group">
                                        <h6>Seat<br>
                                            <p></p>
                                            <%= t.seat %></h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="input-group">
                                        <h6>Gender<br>
                                            <p></p>
                                            <%= t.traveler_gender %></h6>
                                    </div>
                                    <p></p><br>
                                    <%= link_to 'Edit Info', edit_user_trip_path(@user, t), :class => "book_now_btn button_hover"%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>