<section>
    <div class="row">
    <div class="vertical-center">
    <%= form_for([@flight, @trip]) do |f| %>
        <strong><%= f.label "Traveler Info" %></strong><br>
        <%= f.hidden_field :user_id %>
        <%= f.label "First name" %>:
        <%= f.text_field :traveler_first_name %> 
        <%= f.label "Last name" %>:
        <%= f.text_field :traveler_last_name %><br>
        <%= f.label "Gender" %>:
        <%= f.text_field :traveler_gender %> 
        <%= f.label "Contact info" %>:
        <%= f.text_field :traveler_contact_info %><br>

        <div class="show-btn">
            <%= f.submit %>
        </div>

    <% end %>
</div>
    </div>
    </div>
</section>
