<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
        </div>
    </div>
</section>

</section>
    <div class="hotel_booking_area position">
        <div class="container">
            <div class="hotel_booking_table">
                <div class="col-md-3">
                    <h2>Flight #<br><%= @flight.flight_number %></h2>
                </div>
                <div class="col-md-9">
                    <div class="boking_table">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="form-group">
                                        <div class='input-group'>
                                            <h6>Departure<br>
                                            <p></p> 
                                            <%= @flight.from %></h6>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class='input-group'>
                                            <h6>Arrival<br>
                                            <p></p> 
                                            <%= @flight.to %></h6>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="input-group">
                                        <h6>Departure Time<br>
                                            <p></p>
                                            <%= @flight.departure_time %></h6>
                                    </div>
                                    <div class="input-group">
                                        <h6>Arrival Time<br>
                                            <p></p>
                                            <%= @flight.arrival_time %></h6>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="book_tabel_item">
                                    <div class="input-group">
                                        <h6>Flight Duration<br>
                                            <p></p>
                                            <%= @flight.flight_duration %></h6>
                                    </div>
                                    <p></p><br>
                                    <%= link_to "#{ @flight.price }$", new_flight_trip_path(@flight), :class => "book_now_btn button_hover"%>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>