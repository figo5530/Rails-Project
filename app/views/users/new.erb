
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
                
                <%= form_for(@user) do |f| %>
                <h2>Sign Up</h2>
                        <p>
                            <%= f.label :username %>
                            <%= f.text_field :username %>
                        </p>
                        <p>&nbsp</p>
                        <p>
                            <%= f.label :email %>
                            <%= f.text_field :email %>
                        </p>
                        <p>&nbsp</p>
                        <p>
                            <%= f.label :password %>
                            <%= f.text_field :password %>
                        </p>
                        <p>&nbsp</p>
                        <p>
                            <%= f.label :password_confirmation %>
                            <%= f.text_field :password_confirmation %>
                        </p>
                        <p>
                            <%= render partial: 'errors', locals: {errors: @errors} %>
                        </p>
                        <p>
                            <%= f.submit 'Sign Up', :class => "btn theme_btn button_hover" %>
                        </p>
                <% end %>
                <p><%= button_to "Sign Up With Facebook", '/auth/facebook', :class => "btn theme_btn button_hover"%></p>
        </div>
    </div>
</section>