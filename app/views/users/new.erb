<% if @errors %>
    <ul>
    <% @errors.each do |e| %>
        <li><%= e %></li>
    <% end %>
    </ul>
<% end %>

<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :email %>
    <%= f.text_field :email %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %><br>
    <%= f.submit 'Sign Up' %>
    <%= button_to 'Sign Up With Facebook' %>
<% end %>